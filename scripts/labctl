#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
PYTHON_BIN="$REPO_ROOT/.venv/bin/python"

if [[ -x "$PYTHON_BIN" ]]; then
  exec "$PYTHON_BIN" "$REPO_ROOT/software/cli/labctl.py" "$@"
fi

exec python3 "$REPO_ROOT/software/cli/labctl.py" "$@"
